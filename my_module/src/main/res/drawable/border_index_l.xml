    <!-- 背景 -->
    <solid android:color="@color/app_color" />
    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="@dimen/pxtodp10"
        android:bottomRightRadius="@dimen/pxtodp10"
        android:topLeftRadius="@dimen/pxtodp10"
        android:topRightRadius="@dimen/pxtodp10" />
