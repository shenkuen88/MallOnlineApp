    <stroke
        android:width="@dimen/pxtodp2"
        android:color="@color/transparent" />

    <padding
        android:bottom="@dimen/pxtodp2"
        android:left="@dimen/pxtodp2"
        android:right="@dimen/pxtodp2"
        android:top="@dimen/pxtodp2" />
</shape>
