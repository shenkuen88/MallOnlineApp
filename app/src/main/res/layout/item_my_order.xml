<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tol_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_col"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/store_nam"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="商店名字"
                    android:lines="1"
                    android:textColor="@color/order_nol_col"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/slice"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/store_nam"
                    />
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/state"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="待付款"
                    android:textColor="@color/app_color"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pxtodp1"
                android:background="@color/line"></View>
            <ListView
                android:id="@+id/myitemlist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none"
                android:clickable="false"
                android:overScrollMode="never">
            </ListView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pxtodp1"
                android:background="@color/line"></View>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/all_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="共0件商品"
                    android:textSize="13sp"
                    android:textColor="@color/order_nol_col"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="合计"
                        android:textSize="13sp"
                        android:textColor="@color/order_nol_col"/>
                    <TextView
                        android:id="@+id/all_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="￥0.00"
                        android:textSize="16sp"
                        android:textColor="@color/order_nol_col"/>
                    <TextView
                        android:id="@+id/dy_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(含运费￥0.00)"
                        android:textSize="13sp"
                        android:textColor="@color/order_nol_col"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/view_layout"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/btn_qxdd"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="取消订单"
                            android:textSize="13sp"
                            android:textColor="@color/order_nol_col"
                            android:background="@drawable/border_index_nol"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_sqth"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="申请退货"
                            android:textSize="13sp"
                            android:textColor="@color/order_nol_col"
                            android:background="@drawable/border_index_nol"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_ckwl"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看物流"
                            android:textSize="13sp"
                            android:textColor="@color/order_nol_col"
                            android:background="@drawable/border_index_nol"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_zxs"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 找相似 "
                            android:textSize="13sp"
                            android:textColor="@color/order_nol_col"
                            android:background="@drawable/border_index_nol"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_qkqx"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="钱款去向"
                            android:textSize="13sp"
                            android:textColor="@color/app_color"
                            android:background="@drawable/border_index_sel"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_msfk"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="马上付款"
                            android:textSize="13sp"
                            android:textColor="@color/app_color"
                            android:background="@drawable/border_index_sel"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_txfh"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提醒发货"
                            android:textSize="13sp"
                            android:textColor="@color/app_color"
                            android:background="@drawable/border_index_sel"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_qrsh"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="确认收货"
                            android:textSize="13sp"
                            android:textColor="@color/app_color"
                            android:background="@drawable/border_index_sel"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_pj"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/pj_txt"
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评价"
                            android:textSize="13sp"
                            android:textColor="@color/app_color"
                            android:background="@drawable/border_index_sel"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
