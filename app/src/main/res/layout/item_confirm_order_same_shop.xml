<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pxtodp238"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/good_iv"
        android:layout_width="@dimen/pxtodp182"
        android:layout_height="@dimen/pxtodp182"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/pxtodp30"
        android:layout_marginRight="@dimen/pxtodp30"
        android:src="@drawable/default_bg" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/pxtodp30"
        android:layout_marginTop="@dimen/pxtodp32"
        android:layout_toRightOf="@+id/good_iv"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/no_data_show_long_text"
        android:textColor="@color/register_black_text"
        android:textSize="@dimen/pxtosp30" />

    <TextView
        android:id="@+id/classify_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pxtodp120"
        android:layout_toRightOf="@+id/good_iv"
        android:textColor="@color/txt_nol_col" />

    <TextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pxtodp164"
        android:layout_toRightOf="@+id/good_iv"
        android:text="分类"
        android:textColor="@color/txt_nol_col"
        android:textSize="@dimen/pxtosp28"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/pxtodp30"
        android:layout_marginTop="@dimen/pxtodp164"
        android:gravity="right"
        android:textColor="@color/app_color"
        android:textSize="@dimen/pxtosp28"
        android:textStyle="bold" />

</RelativeLayout>