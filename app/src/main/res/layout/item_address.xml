<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/address_ll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pxtodp182"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/pxtodp20">

    <CheckBox
        android:id="@+id/show"
        android:layout_width="@dimen/pxtodp70"
        android:layout_height="@dimen/pxtodp70"
        android:layout_marginLeft="@dimen/pxtodp30"
        android:layout_marginTop="@dimen/pxtodp30"
        android:background="@null"
        android:button="@drawable/selector_check_bg"
        android:checked="false"
        android:focusable="false"
        android:clickable="false"
        android:paddingRight="@dimen/pxtodp30" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/pxtodp182"
        android:layout_marginRight="@dimen/pxtodp24"
        android:layout_weight="1">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pxtodp80"
            android:gravity="center_vertical"
            android:text="@string/no_data_show_short_text"
            android:textColor="@color/title_black"
            android:textSize="@dimen/pxtodp30" />

        <TextView
            android:id="@+id/tel_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pxtodp80"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="@string/no_data_show_short_text"
            android:textColor="@color/title_black"
            android:textSize="@dimen/pxtodp30" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pxtodp80"
            android:layout_below="@+id/name_tv"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="@string/no_data_show_long_text"
            android:textColor="@color/title_black"
            android:textSize="@dimen/pxtodp30" />
    </RelativeLayout>

    <Button
        android:id="@+id/default_view"
        android:layout_width="@dimen/pxtodp70"
        android:layout_height="@dimen/pxtodp30"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/pxtodp14"
        android:background="@drawable/community_reply_bn"
        android:text="默认"
        android:textColor="@color/white_color"
        android:textSize="@dimen/pxtosp24" />


</LinearLayout>