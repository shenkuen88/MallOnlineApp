<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/top_view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp1"
            android:background="@color/app_color" />

        <RelativeLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp400"
            android:background="@drawable/pink_bg"
            >

            <ImageView
                android:id="@+id/mine_set_iv"
                android:layout_width="@dimen/pxtodp64"
                android:layout_height="@dimen/pxtodp64"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pxtodp28"
                android:layout_marginTop="@dimen/pxtodp54"
                android:src="@mipmap/mine_set_icon" />

            <RelativeLayout
                android:id="@+id/no_login_rl"
                android:layout_width="@dimen/pxtodp204"
                android:layout_height="@dimen/pxtodp204"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/pxtodp78">

                <ImageView
                    android:id="@+id/no_login_iv"
                    android:layout_width="@dimen/pxtodp204"
                    android:layout_height="@dimen/pxtodp204"
                    android:src="@mipmap/main_login_icon" />

                <ImageView
                    android:id="@+id/user_head_iv"
                    android:layout_width="@dimen/pxtodp160"
                    android:layout_height="@dimen/pxtodp160"
                    android:visibility="gone"
                    android:src="@mipmap/main_login_icon"
                    android:layout_centerInParent="true"
                    />

                <ImageView
                    android:id="@+id/vip_iv"
                    android:layout_width="@dimen/pxtodp40"
                    android:layout_height="@dimen/pxtodp40"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/pxtodp12"
                    android:src="@mipmap/vip_icon" />

            </RelativeLayout>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pxtodp50"
                android:layout_below="@+id/no_login_rl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/pxtodp22"
                android:text=""
                android:textColor="@color/white_lighter_color"
                android:textSize="@dimen/pxtosp34" />


            <LinearLayout
                android:id="@+id/login_ll"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pxtodp50"
                android:layout_below="@+id/no_login_rl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/pxtodp22"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/pxtodp24"
                    android:paddingRight="@dimen/pxtodp24"
                    android:text="登录"
                    android:textColor="@color/white_lighter_color"
                    android:textSize="@dimen/pxtosp34" />

                <View
                    android:id="@+id/login_line"
                    android:layout_width="@dimen/pxtodp2"
                    android:layout_height="@dimen/pxtodp44"
                    android:background="@color/white_lighter_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/pxtodp24"
                    android:paddingRight="@dimen/pxtodp24"
                    android:text="注册"
                    android:textColor="@color/white_lighter_color"
                    android:textSize="@dimen/pxtosp34" />
            </LinearLayout>


            <TextView
                android:id="@+id/manage_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pxtodp42"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/pxtodp26"
                android:layout_marginRight="@dimen/pxtodp28"
                android:background="@drawable/app_white_transparent_bn"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/pxtodp20"
                android:paddingRight="@dimen/pxtodp20"
                android:text="立即充值"
                android:textColor="@color/white_color"
                android:textSize="@dimen/pxtosp24" />
        </RelativeLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp22"
            android:layout_below="@+id/top_view"
            android:background="@color/block6e" />

        <RelativeLayout
            android:id="@+id/order_rl"
            style="@style/mine_top_select_rl_no_padding"
            android:layout_below="@+id/view4">

            <ImageView
                android:id="@+id/iv1"
                style="@style/mine_top_select_iv"
                android:layout_marginLeft="@dimen/pxtodp24"
                android:src="@mipmap/m_order" />

            <TextView
                android:id="@+id/order_tv"
                style="@style/mine_top_select_tv"
                android:layout_toRightOf="@+id/iv1"
                android:text="我的订单" />

            <ImageView
                style="@style/mine_top_select_tv"
                android:layout_marginRight="@dimen/pxtodp24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pxtodp1"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/top_index_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp154"
            android:layout_below="@+id/order_rl"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dfk"
                style="@style/mine_top_index_ll">

                <ImageView
                    style="@style/mine_top_index_iv"
                    android:src="@mipmap/m_topay" />


                <TextView
                    style="@style/mine_top_index_tv"
                    android:text="待付款" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dfh"
                style="@style/mine_top_index_ll">

                <ImageView
                    style="@style/mine_top_index_iv"
                    android:src="@mipmap/m_transfer" />


                <TextView
                    style="@style/mine_top_index_tv"
                    android:text="待发货" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dsh"
                style="@style/mine_top_index_ll">

                <ImageView
                    style="@style/mine_top_index_iv"
                    android:src="@mipmap/m_treceive" />


                <TextView
                    style="@style/mine_top_index_tv"
                    android:text="待收货" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dpj"
                style="@style/mine_top_index_ll">

                <ImageView
                    style="@style/mine_top_index_iv"
                    android:src="@mipmap/m_tcomment" />

                <TextView
                    style="@style/mine_top_index_tv"
                    android:text="待评价" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tk"
                style="@style/mine_top_index_ll">

                <ImageView
                    style="@style/mine_top_index_iv"
                    android:src="@mipmap/m_trefund" />

                <TextView
                    style="@style/mine_top_index_tv"
                    android:text="退款" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp1"
            android:layout_below="@+id/top_index_ll"
            android:background="@color/line" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp22"
            android:layout_below="@+id/view1"
            android:background="@color/block6e" />

        <RelativeLayout
            android:id="@+id/address_rl"
            style="@style/mine_top_select_rl"
            android:layout_below="@+id/view2">

            <ImageView
                android:id="@+id/iv2"
                style="@style/mine_top_select_iv"
                android:src="@mipmap/m_location" />

            <TextView
                android:id="@+id/address_tv"
                style="@style/mine_top_select_tv"
                android:layout_toRightOf="@+id/iv2"
                android:text="收货地址" />

            <ImageView style="@style/mine_top_select_tv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pxtodp1"
                android:layout_alignLeft="@+id/address_tv"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>


        <!--优惠券-->
        <RelativeLayout
            android:id="@+id/discount_rl"
            style="@style/mine_top_select_rl"
            android:layout_below="@+id/address_rl">

            <ImageView
                android:id="@+id/iv3"
                style="@style/mine_top_select_iv"
                android:src="@mipmap/m_coupon" />

            <TextView
                android:id="@+id/discount_tv"
                style="@style/mine_top_select_tv"
                android:layout_toRightOf="@+id/iv3"
                android:text="优惠券" />

            <ImageView style="@style/mine_top_select_tv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pxtodp1"
                android:layout_alignLeft="@+id/discount_tv"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>
        <!--消费记录-->
        <RelativeLayout
            android:id="@+id/cost_rl"
            style="@style/mine_top_select_rl"
            android:layout_below="@+id/discount_rl">

            <ImageView
                android:id="@+id/iv5"
                style="@style/mine_top_select_iv"
                android:src="@mipmap/m_record" />

            <TextView
                android:id="@+id/play_tv"
                style="@style/mine_top_select_tv"
                android:layout_toRightOf="@+id/iv5"
                android:text="消费记录" />

            <ImageView style="@style/mine_top_select_tv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pxtodp1"
                android:layout_alignLeft="@+id/play_tv"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>
        <!--我的收藏-->
        <RelativeLayout
            android:id="@+id/collect_rl"
            style="@style/mine_top_select_rl"
            android:layout_below="@+id/cost_rl">

            <ImageView
                android:id="@+id/iv4"
                style="@style/mine_top_select_iv"
                android:src="@mipmap/m_favor" />

            <TextView
                android:id="@+id/collect_tv"
                style="@style/mine_top_select_tv"
                android:layout_toRightOf="@+id/iv4"
                android:text="我的收藏" />

            <ImageView style="@style/mine_top_select_tv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pxtodp1"
                android:layout_alignLeft="@+id/collect_tv"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>

        <!--我参与的拼团-->
        <RelativeLayout
            android:id="@+id/view_rl"
            style="@style/mine_top_select_rl"
            android:layout_below="@+id/collect_rl">

            <ImageView
                android:id="@+id/iv6"
                style="@style/mine_top_select_iv"
                android:src="@mipmap/m_buy" />

            <TextView
                android:id="@+id/view_tv"
                style="@style/mine_top_select_tv"
                android:layout_toRightOf="@+id/iv6"
                android:text="我参与的拼团" />

            <ImageView style="@style/mine_top_select_tv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pxtodp1"
                android:layout_alignLeft="@+id/view_tv"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/community_rl"
            style="@style/mine_top_select_rl"
            android:layout_below="@+id/view_rl">

            <ImageView
                android:id="@+id/iv10"
                style="@style/mine_top_select_iv"
                android:src="@mipmap/m_zone" />

            <TextView
                android:id="@+id/community_tv"
                style="@style/mine_top_select_tv"
                android:layout_toRightOf="@+id/iv10"
                android:text="我的帖子" />

            <ImageView style="@style/mine_top_select_tv" />


        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp22"
            android:layout_below="@+id/community_rl"
            android:background="@color/block6e" />
        <!--意见反馈-->
        <RelativeLayout
            android:id="@+id/suggest_rl"
            style="@style/mine_top_select_rl"
            android:layout_below="@+id/view3">

            <ImageView
                android:id="@+id/iv7"
                style="@style/mine_top_select_iv"
                android:src="@mipmap/m_reply" />

            <TextView
                android:id="@+id/suggect_tv"
                style="@style/mine_top_select_tv"
                android:layout_toRightOf="@+id/iv7"
                android:text="意见反馈" />

            <ImageView style="@style/mine_top_select_tv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pxtodp1"
                android:layout_alignLeft="@+id/suggect_tv"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>
        <!--关于我们-->
        <RelativeLayout
            android:id="@+id/about_rl"
            style="@style/mine_top_select_rl"
            android:layout_below="@+id/suggest_rl">

            <ImageView
                android:id="@+id/iv8"
                style="@style/mine_top_select_iv"
                android:src="@mipmap/m_about" />

            <TextView
                android:id="@+id/about_tv"
                style="@style/mine_top_select_tv"
                android:layout_toRightOf="@+id/iv8"
                android:text="关于我们" />

            <ImageView style="@style/mine_top_select_tv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pxtodp1"
                android:layout_alignLeft="@+id/about_tv"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
