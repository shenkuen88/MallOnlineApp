<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_add_friend_dialog_bg"
              android:orientation="vertical">


    <include
        android:id="@+id/common_back"
        layout="@layout/layout_top"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxtodp1"
        android:background="@drawable/line_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pxtodp24"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pxtodp30"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp90"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/pxtodp170"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/title_black"
                android:textSize="@dimen/pxtodp30"/>

            <cn.nj.www.my_module.view.ClearEditText
                android:id="@+id/app_code_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white_color"
                android:hint="请输入收到的验证码"
                android:inputType="number"
                android:paddingRight="@dimen/pxtodp24"
                android:textColorHint="@color/register_hint_text"
                android:textSize="@dimen/pxtosp30"/>

            <Button
                android:id="@+id/app_code_bn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pxtodp52"
                android:layout_marginRight="@dimen/pxtodp24"
                android:background="@drawable/white_rec"
                android:paddingLeft="@dimen/pxtodp10"
                android:paddingRight="@dimen/pxtodp10"
                android:text="获取验证码"
                android:textColor="@color/title_black"
                android:textSize="@dimen/pxtosp26"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp1"
            android:background="@drawable/line_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/pxtodp170"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="新密码"
                android:textColor="@color/title_black"
                android:textSize="@dimen/pxtodp30"/>

            <cn.nj.www.my_module.view.ClearPasswordEditText
                android:id="@+id/app_regist_psd_et"
                style="@style/register_input_user_infos_et"
                android:inputType="textPassword"
                app:hint="请输入登录密码"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp1"
            android:background="@drawable/line_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/pxtodp170"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="确认新密码"
                android:textColor="@color/title_black"
                android:textSize="@dimen/pxtodp30"/>

            <cn.nj.www.my_module.view.ClearPasswordEditText
                android:id="@+id/app_regist_psd_again_et"
                style="@style/register_input_user_infos_et"
                android:inputType="textPassword"
                app:hint="请输入密码"/>
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/app_register_bn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxtodp90"
        android:layout_marginLeft="@dimen/pxtodp30"
        android:layout_marginRight="@dimen/pxtodp30"
        android:layout_marginTop="@dimen/pxtodp54"
        android:background="@drawable/common_pink_bn"
        android:enabled="false"
        android:text="注册"
        android:textColor="@color/white_color"
        android:textSize="@dimen/pxtosp36"/>
</LinearLayout>



