<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nannong.mall.activity.mine.CouponsActivity">
    <include
        android:id="@+id/common_back"
        layout="@layout/layout_top" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxtodp1"
        android:background="@color/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/btn_wsy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/wsy_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未使用(0)"
                android:layout_centerInParent="true"
                android:textColor="@color/app_color"
                />
            <View
                android:id="@+id/wsy_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_color"></View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_ysy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/ysy_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已使用(0)"
                android:layout_centerInParent="true"
                android:textColor="@color/txt_col"
                />
            <View
                android:id="@+id/ysy_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_color"></View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_ygq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/ygq_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已过期(0)"
                android:layout_centerInParent="true"
                android:textColor="@color/txt_col"
                />
            <View
                android:id="@+id/ygq_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_color"></View>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxtodp1"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/my_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:descendantFocusability="afterDescendants"
            android:divider="@drawable/line_view"
            android:dividerHeight="@dimen/pxtodp1"
            android:overScrollMode="never"
            android:scrollbars="none"
            />
    </LinearLayout>
</LinearLayout>
