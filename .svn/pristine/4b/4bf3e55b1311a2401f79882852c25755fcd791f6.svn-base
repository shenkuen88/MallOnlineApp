<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="1dp"
    android:id="@+id/item_cv"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    android:layout_marginRight="@dimen/pxtodp10"
    card_view:contentPadding="10dp"
    android:layout_width="172dp"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/pxtodp480"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <ImageView
            android:id="@+id/good_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxtodp284"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/good_iv"
            android:layout_marginBottom="@dimen/pxtodp32"
            android:layout_marginTop="@dimen/pxtodp24"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/no_data_show_long_text"
            android:textColor="@color/register_black_text"
            android:textSize="@dimen/pxtosp28" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:singleLine="true"
            android:text="@string/no_data_show_Num"
            android:textColor="@color/app_color"
            android:textSize="@dimen/pxtosp28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/provider_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/name_tv"
            android:singleLine="true"
            android:text="@string/no_data_show_Num"
            android:textColor="@color/txt_nol_col"
            android:textSize="@dimen/pxtosp20" />
    </RelativeLayout>
</android.support.v7.widget.CardView>