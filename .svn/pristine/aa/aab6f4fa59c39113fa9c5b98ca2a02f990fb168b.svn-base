<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <cn.nj.www.my_module.view.NoScrollViewPager
        android:id="@+id/my_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </cn.nj.www.my_module.view.NoScrollViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="indexMethod"
                android:paddingBottom="@dimen/pxtodp12"
                android:paddingTop="@dimen/pxtodp18"
                android:src="@mipmap/index_p"/>


            <ImageView
                android:id="@+id/ivZone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="shequMethod"
                android:paddingBottom="@dimen/pxtodp12"
                android:paddingTop="@dimen/pxtodp18"
                android:src="@mipmap/sq_g"/>

            <ImageView
                android:id="@+id/ivFriend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="friendMethod"
                android:paddingBottom="@dimen/pxtodp12"
                android:paddingTop="@dimen/pxtodp18"
                android:src="@mipmap/friend_g"/>
            <ImageView
                android:id="@+id/ivCart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="cartMethod"
                android:paddingBottom="@dimen/pxtodp12"
                android:paddingTop="@dimen/pxtodp18"
                android:src="@mipmap/cart_nol"/>
            <ImageView
                android:id="@+id/ivMine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="userMethod"
                android:paddingBottom="@dimen/pxtodp12"
                android:paddingTop="@dimen/pxtodp18"
                android:src="@mipmap/me_g"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
