<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


  <RelativeLayout

      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
          android:layout_width="@dimen/pxtodp246"
          android:id="@+id/icon_iv"
          android:layout_marginTop="@dimen/pxtodp300"
          android:layout_centerHorizontal="true"
          android:layout_height="@dimen/pxtodp246" />

      <TextView
          android:layout_marginTop="@dimen/pxtodp30"
          android:layout_width="wrap_content"
          android:textSize="@dimen/pxtosp36"
          android:layout_below="@+id/icon_iv"
          android:layout_centerHorizontal="true"
          android:textColor="@color/title_black"
          android:text="APP"
          android:layout_height="wrap_content" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_alignParentBottom="true"
          android:gravity="center"
          android:text="Copyright @ 2013-2016\n公司名称 "
          android:layout_marginBottom="@dimen/pxtodp30"
          android:lineSpacingExtra="2px"
          android:textSize="@dimen/pxtosp24"
          android:layout_height="wrap_content" />
  </RelativeLayout>

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/load_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>